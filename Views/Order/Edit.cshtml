 @model WebApplication1.Models.Order

<form asp-action="Edit">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
    </div>
    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
    </div>
    <div>
        <label asp-for="OrderType"></label>
        <select asp-for="OrderType">
            <option value="Print">Печать</option>
            <option value="Stickers">Наклейки</option>
            <option value="Signboard">Вывеска</option>
        </select>
    </div>
    <div>
        <label asp-for="OrderDate"></label>
        <input asp-for="OrderDate" type="date" />
    </div>
    <div>
        <label asp-for="Status"></label>
        <select asp-for="Status">
            <option value="Accepted">Принят</option>
            <option value="In Progress">В работе</option>
            <option value="Completed">Выполнен</option>
        </select>
    </div>
    <button type="submit">Save</button>
</form>
